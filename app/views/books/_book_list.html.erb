<div id="<%= dom_id book %>" class="p-3 shadow-md rounded-xl">
  <h2 class="title_main" >
    <%= link_to book.title, book_path(book) %>
  </h2>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Author:</strong>
    <%= book.author %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Description:</strong>
    <%= book.description %>
  </p>

  <%= link_to "Show this book", book, class: "btn-primary" %>
</div>
