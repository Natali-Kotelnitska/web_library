<div id="<%= dom_id book %>">
  <h2 class="my-5 text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400" >
    <%= link_to book.title, book_path(book) %>
  </h2>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Author:</strong>
    <%= book.author %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Description:</strong>
    <%= book.description %>
  </p>

  <%= link_to "Show this book", book, class: "btn-primary" %>
   <hr class="mt-6">
