<%= simple_form_for @book, defaults: { input_html: { class: 'form_input' } }, html: { class: 'contents' } do |form| %>
  <%= form.error_notification %>

  <div class="my-5">
    <%= form.input :title %>
  </div>

  <div class="my-5">
    <%= form.input :author %>
  </div>

  <div class="my-5">
    <%= form.input :isbn %>
  </div>

  <div class="my-5">
    <%= form.input :description, as: :text %>
  </div>

  <div class="inline">
    <%= form.button :submit, 'Save', class: 'form_btn' %>
  </div>
<% end %>
