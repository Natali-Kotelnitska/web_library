<div id="<%= dom_id book %>">
  <h2 class="my-5 text-4xl font-extrabold dark:text-white">
    <%= book.title %>
  </h2>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Author:</strong>
    <%= book.author %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Isbn:</strong>
    <%= book.isbn %>
  </p>

  <p class="my-5">
    <strong class="block mb-1 font-medium">Description:</strong>
    <%= book.description %>
  </p>
</div>
